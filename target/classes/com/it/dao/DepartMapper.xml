<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.it.dao.DepartMapper">
    <insert id="insert" parameterType="com.it.pojo.Depart">
        INSERT INTO multiplestages
        (id,pid,name,level,createTime,createBy,updateTime,updateBy,dataStatus,dataVersion)
        VALUES(
        #{id},
        #{pid},
        #{name},
        #{level},
        #{createTime},
        #{createBy},
        #{updateTime},
        #{updateBy},
        1,
        1)
    </insert>

    <select id="selectById" parameterType="java.lang.Long" resultType="com.it.pojo.Depart">
        SELECT * FROM multiplestages WHERE id=#{id} AND dataStatus&gt;=1
    </select>

    <select id="selectAll" resultType="com.it.pojo.Depart">
         SELECT * FROM multiplestages WHERE dataStatus&gt;=1
    </select>

    <insert id="batchInsert" parameterType="com.it.pojo.Depart">
        begin
        insert into multiplestages
        (
        id,pid,name,level,createTime,createBy,updateTime,updateBy,dataStatus,dataVersion
        )
        values
        <foreach collection="list" item="item">
            (#{item.id},#{item.pid},#{item.name},#{item.level},#{item.createTime},
            #{item.createBy},
            #{item.updateTime},
            #{item.updateBy},
            #{item.dataStatus},
            #{item.dataVersion}
            );
        </foreach>
        end;
    </insert>
</mapper>